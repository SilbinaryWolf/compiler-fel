Header :: struct {
	isBlue: bool = true
	hey: string = "woop"
}

Header :: css {
	.header {
		width: 100%
		height: 60px
		background-color: blue;
	}

	.header.is-active {
		display: block;
	}
}

Header :: html {
	class := "no_blue"
	test := "more"
	if isBlue {
		// todo(Jake): Fix this, something wrong with evaluator not able to set a variable after declaring.
		// stuff BREAKS!
		// test
		class = "blue"
	}
	header(class="header "+class+" "+hey) {
		"header text"
		children
	}
}

